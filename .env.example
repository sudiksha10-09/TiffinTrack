# TiffinTrack Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=production

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Email Configuration (Required for sending reminders)
# Option 1: Gmail (Recommended for testing)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SENDER_EMAIL=your-email@gmail.com
SENDER_NAME=TiffinTrack

# Option 2: SendGrid (Recommended for production)
# SMTP_SERVER=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
# SENDER_EMAIL=noreply@yourdomain.com
# SENDER_NAME=TiffinTrack

# Option 3: Mailgun
# SMTP_SERVER=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_USERNAME=postmaster@your-domain.mailgun.org
# SMTP_PASSWORD=your-mailgun-password
# SENDER_EMAIL=noreply@yourdomain.com
# SENDER_NAME=TiffinTrack

# Optional Email Settings
SMTP_USE_TLS=True
SMTP_TIMEOUT=30

# Application Configuration
UPLOAD_FOLDER=static/uploads/dishes
MAX_CONTENT_LENGTH=16777216

# Notes:
# - For Gmail: You need to enable 2FA and create an App Password
# - For SendGrid: Sign up at sendgrid.com and get API key
# - For Mailgun: Sign up at mailgun.com and verify your domain
# - See EMAIL_SETUP_GUIDE.md for detailed instructions
